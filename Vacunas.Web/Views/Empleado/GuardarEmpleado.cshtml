@model Vacunas.Datos.Entidades.Empleado

@{
    ViewData["Title"] = "GuardarEmpleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <div class="card-header">
    Añadir nuevo empleado
  </div>
  <div class="card-body">
      <form asp-action="GuardarEmpleado" asp-controller="Empleado" method="post">
          <h1 style="font-size:12pt">Datos Empleado</h1>
          <div class="mb-3">
              <label class="form-label">Nombre(s)</label>
              <input asp-for = "FirstName" type="text" class="form-control">
              <span asp-validation-for="FirstName" class="text-danger"></span>
          </div>
          <div class="mb-3">
              <label class="form-label">Apellido(s)</label>
              <input asp-for = "LastName" type="text" class="form-control">
              <span asp-validation-for="LastName" class="text-danger"></span>
          </div>
          <div class="mb-3">
              <label class="form-label">Rango</label>
              <input asp-for = "Range" type="text" class="form-control">
              <span asp-validation-for="Range" class="text-danger"></span>
          </div>
          <div class="mb-3">
              <label class="form-label">Email</label>
              <input asp-for = "Email" type="text" class="form-control">
              <span asp-validation-for="Email" class="text-danger"></span>
          </div>
          <button type="submit" class="btn btn-primary">Aceptar</button>
          <a asp-action="MostrarEmpleados">Ver lista de empledos</a>
      </form>
  </div>
</div>
